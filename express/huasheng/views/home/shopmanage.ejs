<script>
	function onSubPub(){     //同步操作
		if(pubform.shopname.value==''){
			alert('营业点名称不允许为空');
			pubform.shopname.focus();
			return false;
		}
		if(pubform.shopintr.value==''){
			alert('营业点简介不允许为空');
			pubform.shopintr.focus();
			return false;
		}
		if(pubform.shoptype.value=='0'){
			alert('请选择营业类别');
			pubform.shoptype.focus();
			return false;
		}  //focus 聚焦  哪一个文本框没有被填写 就会alert弹框警告
		return true;
	}
</script>

