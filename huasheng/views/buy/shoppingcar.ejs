<html>

	<head>
		<title>华盛建材租赁平台</title>
		<meta charset="utf-8" />
		<link rel="stylesheet" href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css">
		<script src="/javascripts/jquery-2.1.4.min.js"></script>
		<script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>

		<style>
			.headStyle {
				height: 2.4em;
				background-color: #fff;
				margin-top: 6px;
			}
		</style>
	
		
	</head>

	<body>
<div style="text-align: center;">
购物车
</div>
<div class="row">
	      <div class="col-sm-1"></div>
	      <div class="col-sm-10">
	      	<table class="table table-bordered">
			  <tbody>
			  <% rsGoods.forEach(function(row){ %>
			    <tr>
			      <td rowspan="2"><img src='../<%-row.goodsimg%>'/></td>
			      <td>
			      	<%-row.goodsname%><br/>
			      </td>
			    </tr>
			    <tr>
			    	<td align='right'>
			    	<button type="button" class="btn btn-danger btn-xs">立即购买</button>&nbsp;
			    	<a href="/pay/putshopping?goodsid=<%-row.goodsid%>" target="_blank"><button type="button" class="btn btn-danger btn-xs">加入购物车</button></a>&nbsp;
			    		价格:<%-row.price%>&nbsp;
			    		好评度:<%-row.praise%>&nbsp;
			    		<button type="button" class="btn btn-danger btn-xs">go</button>&nbsp;
			    	</td>
			    </tr>
			  <% }) %>
			  </tbody>
			</table>
	      </div>
	    
	      <div class="col-sm-1"></div>
</div>

</body>
</html>
